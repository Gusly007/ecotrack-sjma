# Database
DATABASE_URL="postgresql://postgres:sjma@localhost:5432/ecotrack_prod"

# Server
# NOTE: service-users lit la variable PORT
PORT=3010
NODE_ENV=development

# JWT
JWT_SECRET="your-super-secret-key-change-in-prod"
JWT_REFRESH_SECRET="change-me-refresh-secret"
# NOTE: les variables lues par le code sont JWT_EXPIRES_IN et JWT_REFRESH_EXPIRES_IN
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Bcrypt
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000